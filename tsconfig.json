{
    "include": ["src/**/*"],
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "sourceMap": true,

        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,

        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    }
}
